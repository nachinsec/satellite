{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "satellite",
  "version": "0.2.0",
  "identifier": "com.satellite.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "satellite",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "minimizable": true,
        "maximizable": false,
        "closable": true,
        "decorations": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}
